/**index.wxss**/

page {
  background-color: #101318;
}

.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #101318;
}
.container .search-left{
  flex: 8;
  background: #1e212a;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #fff;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.banners {
  width: 100%;
  height: 200px;
}

.banner {
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  color: #fff;
  position: absolute;
  width: 100%;
  padding-left: 16px;
  padding-right: 16px;
  bottom: 30px;
  font-size: 16px;
  left: 0;
}

.sub-title {
  color: #fff;
  height: 36px;
  line-height: 36px;
  padding: 0 16px;
  width: 100%;
  font-size: 14px;
  padding-left: 16px;
  padding-right: 16px;
}

.news-item-container {
  background-color: #101318;
  width: 100%;
  padding-left: 8px;
  padding-right: 8px;
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #1e212a;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.news-item-right {
  width: 30px;
  height: 30px;
}

.news-image {
  width: 50px;
  height: 50px;
  border: 10px;
}

.news-item-title {
  font-size: 13px;
  color: #fff;
}

.load-btn {
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 16px;
  margin-bottom: 16px;
  display: block;
  line-height: 2.3;
  font-size: 13px;
  padding: 0 1.34em;
}
