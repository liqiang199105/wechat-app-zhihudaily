.art-header {
  position: relative;
  width: 100%;
  height: 219px;
  color: #1e212a;
}

.art-title {
  padding-top: 10px;
  font-family: 'Lucida Sans',
                 'Lucida Sans Regular',
                 'Lucida Grande',
                 'Lucida Sans Unicode',
                 Geneva,
                 Verdana,
                 sans-serif;
  position: relative;
  color: #fff;
  text-align: center;
  bottom: 5px;
  left: 8px;
  font-size: 20px;
}

.art-img {
  width: 100%;
  height: 200px;
}

.art-source {
  font-family: 'Lucida Sans',
                 'Lucida Sans Regular',
                 'Lucida Grande',
                 'Lucida Sans Unicode',
                 Geneva,
                 Verdana,
                 sans-serif;
  position: relative;
  padding-top: 1px;
  padding-left: 15px;
  bottom: 10px;
  font-size: 14px;
  right: 10px;
}

.art-content {
  font-size: 13px;
  color: #fff;
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 5px;
  background-color: #101318;
  line-height: 1.5;
}
