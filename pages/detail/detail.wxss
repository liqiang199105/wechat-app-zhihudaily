.art-header {
  position: relative;
  width: 100%;
  height: 219px;
  color: #101318;
}

.art-title {
    padding-top: 10px;
    font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  position: relative;
  color: #fff;
  text-align: center;
  bottom: 5px;
  left: 8px;
  font-size: 20px;
}

.art-img {
  width: 100%;
  height: 200px;
}

.art-source {
  position: relative;
  bottom: 15px;
  font-size: 14px;
  right: 8px;
}

.art-content {
  font-size: 13px;
  color: #fff;
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 40px;
  background-color: #101318;
  line-height: 1.5;
}
